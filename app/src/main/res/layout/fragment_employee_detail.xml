<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/spacing_20"
    tools:context=".features.employeedetail.ui.EmployeeDetailFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical"
            android:padding="@dimen/spacing_20"
            tools:context=".features.employeedetail.ui.EmployeeDetailFragment">

            <TextView
                android:id="@+id/employee_first_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                tools:text="Петр" />

            <TextView
                android:id="@+id/employee_last_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                tools:text="Петров" />

            <TextView
                android:id="@+id/employee_date_of_birth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                tools:text="22.11.1987 г." />

            <TextView
                android:id="@+id/employee_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                tools:text="20 лет" />

            <TextView
                android:id="@+id/employee_specialty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                tools:text="Разработчик" />
        </LinearLayout>

        <ImageView
            android:id="@+id/employee_avatar"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:src="@drawable/ic_launcher_background" />

    </LinearLayout>

</LinearLayout>